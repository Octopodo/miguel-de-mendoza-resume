---
import navigation from '../data/navigation.json'
import {lang} from '../data/lang.ts'

const {class: className} = Astro.props
---


  <nav class={`
    flex
    flex-col
    
    ${className}
  `}>
    {navigation.map(link => 
      <a 
        href={link.url}
        class="
        
        whitespace-wrap
        text-2xl
        text-medium
        
        "
      >{link.name[lang as 'en' | 'es']}</a>)}
  </nav>



